{erl_opts, [
            debug_info,
            {parse_transform, lager_transform}
           ]}.
{deps, [
        {lager, "3.8.0"},
        {jsx, "2.10.0"},
        {gun, "1.3.1"},
        {cryptoring_amqp, {git, "git@github.com:T0ha/cryptoring_amqp.git", {branch, master}}}
       ]}.

{shell, [
         {apps, [binance]},
        {config, "priv/dev.config"}
        ]}.

{relx, [{release, {binance, "0.1.1"},
         [binance]},

        {dev_mode, false},
        {include_erts, true},

        {vm_args, "priv/vm.args"},
        {sys_config, "priv/sys.config"},

        {extended_start_script, true}]}.

{profiles, [
            {prod, [
                    {relx, [
                            {dev_mode, false},
                            {include_erts, false}
                           ]}
                   ]
            },
            {docker, [
                    {relx, [
                            {sys_config_src, "priv/docker.config.src"},
                            {vm_args, "priv/vm.args"},
                            {dev_mode, false},
                            {include_erts, true}
                           ]}
                   ]
            }
           ]
}.
